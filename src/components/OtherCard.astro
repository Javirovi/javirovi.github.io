---
export interface Props {
  project: {
    id: string;
    title: string;
    description: string;
    thumbnail: string;
    externalLink: string | null;
    type: string;
  };
}

const { project } = Astro.props;
---

<article class="other-card fade-in">
  {project.externalLink ? (
    <a href={project.externalLink} target="_blank" rel="noopener noreferrer" class="card-link">
      <div class="card-image">
        <img src={project.thumbnail} alt={project.title} loading="lazy" />
        <div class="card-overlay">
          <span class="material-symbols-outlined external-icon">
            open_in_new
          </span>
        </div>
      </div>
      <div class="card-content">
        <span class="card-type">{project.type}</span>
        <h3>{project.title}</h3>
        <p>{project.description}</p>
      </div>
    </a>
  ) : (
    <div class="card-static">
      <div class="card-image">
        <img src={project.thumbnail} alt={project.title} loading="lazy" />
      </div>
      <div class="card-content">
        <span class="card-type">{project.type}</span>
        <h3>{project.title}</h3>
        <p>{project.description}</p>
      </div>
    </div>
  )}
</article>

<style>
  .other-card {
    position: relative;
    border-radius: var(--radius);
    background: var(--color-bg-alt);
    border: 1px solid rgba(255, 247, 235, 0.1);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    transition: var(--transition);
  }

  .other-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(255, 247, 235, 0.2);
  }

  .card-link,
  .card-static {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .card-image {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    overflow: hidden;
    background: var(--color-bg-alt);
  }

  .card-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
  }

  .card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(40, 62, 56, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: var(--transition);
  }

  .other-card:hover .card-overlay {
    opacity: 1;
  }

  .other-card:hover .card-image img {
    transform: scale(1.05);
  }

  .external-icon {
    font-size: 3rem;
    color: var(--color-primary);
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.5));
    transition: var(--transition);
  }

  .other-card:hover .external-icon {
    transform: scale(1.1);
  }

  .card-content {
    padding: var(--spacing-lg);
  }

  .card-type {
    display: inline-block;
    background: var(--color-primary);
    color: var(--color-bg-main);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
  }

  .card-content h3 {
    color: var(--color-text);
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-sm);
  }

  .card-content p {
    color: var(--color-text);
    opacity: 0.8;
    font-size: 0.95rem;
    margin-bottom: 0;
  }
</style>